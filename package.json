{
  "name": "focusit",
  "displayName": "FocusIt",
  "description": "Keep your editing line always centered with configurable focus range",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/IAMLEIzZ/FocusIt"
  },
  "publisher": "IAMLEIzZ",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusit.toggle",
        "title": "FocusIt: Toggle Auto Center"
      }
    ],
    "configuration": {
      "title": "FocusIt",
      "properties": {
        "focusit.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-centering when editing"
        },
        "focusit.focusRange": {
          "type": "number",
          "default": 11,
          "minimum": 1,
          "description": "Number of lines to keep in focus (will auto-adjust to odd number for symmetry)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
